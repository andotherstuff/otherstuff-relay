PORT=8000

# Number of relay worker processes for parallel message validation and processing
# More workers = better validation throughput (recommended: 4-8)
NUM_RELAY_WORKERS=4

# Number of storage worker processes for batch inserting to ClickHouse
# More workers = higher write throughput (recommended: 2-4)
NUM_STORAGE_WORKERS=2

# ClickHouse connection URL
# Format: http://[user[:password]@]host[:port]
# Note: The schema will automatically use the 'nostr' database
# Examples:
#   http://localhost:8123
#   http://default:password@localhost:8123
#   http://user@clickhouse.example.com:8123
DATABASE_URL=http://localhost:8123

# Optional: Source relay identifier for tracking event origins
# Leave empty for local events or set to your relay URL
RELAY_SOURCE=wss://your-relay-domain.com

# Redis connection URL
# Format: redis://[user[:password]@]host[:port][/database]
# Examples:
#   redis://localhost:6379
#   redis://:password@localhost:6379
#   redis://localhost:6379/0
REDIS_URL=redis://localhost:6379